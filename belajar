    <!-- JavaScript untuk Logika Aplikasi -->
    <script type="text/javascript">
        // Data Kuis
        const quizQuestions = [
            {
                question: "Perangkat keras jaringan yang berfungsi menghubungkan berbagai jaringan (LAN/WAN) dan menentukan jalur terbaik untuk pengiriman paket data adalah...",
                options: ["Hub", "Switch", "Router", "Access Point"],
                answer: "Router"
            },
            {
                question: "Jenis jaringan yang mencakup area geografis yang luas, bahkan bisa antar benua, adalah...",
                options: ["LAN", "MAN", "WAN", "PAN"],
                answer: "WAN"
            },
            {
                question: "Apa kepanjangan dari 'Modem'?",
                options: ["Modular Element", "Modulator-Demodulator", "Mode Definition", "Monitor Device"],
                answer: "Modulator-Demodulator"
            },
            {
                question: "Protokol standar yang digunakan oleh Internet untuk komunikasi data adalah...",
                options: ["HTTP/FTP", "TCP/IP", "SMTP/POP3", "ICMP/ARP"],
                answer: "TCP/IP"
            },
            {
                question: "Jaringan yang hanya mencakup area kecil seperti di dalam satu rumah atau gedung kantor disebut...",
                options: ["WAN", "MAN", "LAN", "Internet"],
                answer: "LAN"
            }
        ];

        // --- Logika Navigasi ---
        function showPage(pageId) {
            const pages = document.querySelectorAll('.page');
            pages.forEach(page => {
                // Sembunyikan semua halaman
                page.classList.add('hidden');
                page.classList.remove('flex');
            });

            // Tampilkan halaman yang diminta
            const activePage = document.getElementById(pageId + 'Page');
            if (activePage) {
                activePage.classList.remove('hidden');
                activePage.classList.add('flex', 'flex-col'); // Gunakan flex untuk tata letak konten
                window.scrollTo({ top: 0, behavior: 'smooth' }); // Gulir ke atas
            }
        }
        
        // --- Logika Kuis ---
        const quizForm = document.getElementById('quizForm');
        const quizResult = document.getElementById('quizResult');
        const scoreDisplay = document.getElementById('scoreDisplay');
        const feedbackMessage = document.getElementById('feedbackMessage');

        function renderQuiz() {
            quizForm.innerHTML = '';
            quizQuestions.forEach((q, qIndex) => {
                const qDiv = document.createElement('div');
                qDiv.className = 'p-4 border border-blue-200 rounded-lg shadow-md bg-white';
                qDiv.innerHTML = `
                    <p class="text-lg font-semibold text-gray-800 mb-3">Pertanyaan ${qIndex + 1}: ${q.question}</p>
                    <div class="space-y-2">
                        ${q.options.map((option, oIndex) => `
                            <label class="flex items-center space-x-3 cursor-pointer p-2 rounded-lg hover:bg-blue-50 transition duration-150">
                                <input type="radio" name="question${qIndex}" value="${option}" class="text-primary-blue focus:ring-primary-blue">
                                <span class="text-gray-700">${option}</span>
                            </label>
                        `).join('')}
                    </div>
                    <p id="feedback${qIndex}" class="mt-2 font-medium text-sm"></p>
                `;
                quizForm.appendChild(qDiv);
            });

            // Tambahkan tombol submit
            const submitButton = document.createElement('button');
            submitButton.type = 'submit';
            submitButton.className = 'w-full bg-primary-blue hover:bg-secondary-blue text-white font-bold py-3 px-4 rounded-full transition duration-300 transform hover:scale-[1.01] mt-6';
            submitButton.textContent = 'Kirim Jawaban';
            quizForm.appendChild(submitButton);

            // Tambahkan event listener untuk submit form
            quizForm.addEventListener('submit', submitQuiz);
        }

        function submitQuiz(event) {
            event.preventDefault();
            let score = 0;
            let allAnswered = true;

            quizQuestions.forEach((q, qIndex) => {
                const radios = document.getElementsByName(`question${qIndex}`);
                let selectedAnswer = null;
                const feedbackElement = document.getElementById(`feedback${qIndex}`);
                feedbackElement.textContent = ''; // Reset feedback

                // Temukan jawaban yang dipilih
                radios.forEach(radio => {
                    radio.disabled = true; // Nonaktifkan pilihan setelah submit
                    if (radio.checked) {
                        selectedAnswer = radio.value;
                    }
                });

                if (selectedAnswer === null) {
                    allAnswered = false;
                    feedbackElement.textContent = 'Anda belum menjawab pertanyaan ini.';
                    feedbackElement.classList.add('text-yellow-600');
                    return;
                }
                
                // Cek jawaban
                if (selectedAnswer === q.answer) {
                    score++;
                    feedbackElement.textContent = 'Jawaban Benar! ðŸŽ‰';
                    feedbackElement.className = 'mt-2 font-medium text-sm text-green-600';
                } else {
                    feedbackElement.textContent = `Jawaban Salah. Jawaban yang benar adalah: ${q.answer}`;
                    feedbackElement.className = 'mt-2 font-medium text-sm text-red-600';
                }
            });

            if (!allAnswered) {
                // Tampilkan pesan modal jika ada yang belum terjawab
                showModal('Mohon jawab semua 5 pertanyaan sebelum mengirimkan.');
                return;
            }

            // Hitung dan tampilkan hasil akhir
            quizForm.querySelector('button[type="submit"]').disabled = true;
            quizForm.querySelector('button[type="submit"]').classList.add('opacity-50', 'cursor-not-allowed');
            
            scoreDisplay.textContent = `Skor Anda: ${score} dari ${quizQuestions.length}`;
            
            let message = '';
            if (score === quizQuestions.length) {
                message = 'Luar biasa! Anda menguasai semua materi. Pertahankan! ðŸ’¯';
            } else if (score >= 3) {
                message = 'Bagus! Anda memiliki pemahaman yang baik, coba tinjau kembali materi yang salah.';
            } else {
                message = 'Jangan berkecil hati! Mari kita pelajari materi kembali dan coba lagi.';
            }
            feedbackMessage.textContent = message;
            
            quizResult.classList.remove('hidden');
        }

        function resetQuiz() {
            // Sembunyikan hasil
            quizResult.classList.add('hidden');
            // Render ulang kuis
            renderQuiz();
        }

        // --- Logika Modal (Pengganti alert) ---
        const messageModal = document.getElementById('messageModal');
        const modalText = document.getElementById('modalText');

        function showModal(text) {
            modalText.textContent = text;
            messageModal.classList.remove('hidden');
            messageModal.classList.add('flex');
        }

        function closeModal() {
            messageModal.classList.add('hidden');
            messageModal.classList.remove('flex');
        }


        // Inisialisasi: Tampilkan Beranda dan render kuis pertama kali
        window.onload = function() {
            showPage('home');
            renderQuiz();
        };

    </script>
</body>
</html>
